<script>

  function AgregarCliente() {

  let nombrecliente = document.querySelector('#nombre').value;
  let apellidoscliente = document.querySelector('#apellidos').value;
  let edadcliente = document.querySelector('#edad').value;

  const clienteObj = { nombre: nombrecliente, apellidos: apellidoscliente, edad: edadcliente };
  const response =  fetch('http://localhost:3500/agregar/', {
    method: 'POST',
     mode: 'cors', // this cannot be 'no-cors'
      headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json',
      },
    body: JSON.stringify(clienteObj)
  })
  .then( res => location.href='index.ejs' )
  ;

  
}

</script>